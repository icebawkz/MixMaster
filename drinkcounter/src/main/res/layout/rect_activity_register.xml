<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".RegisterActivity" tools:deviceIds="wear_square">

    <Spinner
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:prompt="@string/select"
        android:entries="@array/weight_array"
        android:id="@+id/weight"
        android:layout_alignTop="@+id/gender"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:prompt="@string/select2"
        android:entries="@array/gender"
        android:id="@+id/gender"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your personal info"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Enter"
        android:id="@+id/button2"
        android:background="@drawable/circle"
        android:gravity="center"
        android:ellipsize="start"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Weight (lbs)"
        android:id="@+id/textView2"
        android:layout_above="@+id/weight"
        android:layout_alignEnd="@+id/weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gender"
        android:id="@+id/textView3"
        android:layout_above="@+id/weight"
        android:layout_alignStart="@+id/gender" />
</RelativeLayout>
